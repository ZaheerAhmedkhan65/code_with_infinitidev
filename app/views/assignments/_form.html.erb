<div class="card-body">
      <%= form_with(model: [@course, @assignment], local: true) do |form| %>
        <div class="row mb-2">
          <div class="col-lg-6">
            <div class="form-group">
              <%= form.label :title, "Assignment Title" , class:"form-label fw-bold" %>
              <%= form.text_field :title, class: "form-control" %>
            </div>
          </div>
           <div class="col-lg-6">
            <div class="form-group">
              <%= form.label :due_date, "Due Date" , class:"form-label fw-bold"%><br>
              <%= form.datetime_select :due_date, class:"form-control" %>
            </div>
          </div>
        </div>
        <div class="row mb-2">
          <div class="col-lg-6">
            <div class="form-group">
              <%= form.label :file, "Upload File (optional)" , class:"form-label fw-bold"%>
              <%= form.file_field :file, class: "form-control" %>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="form-group">
              <%= form.label :image, "Upload Image (optional)" , class:"form-label fw-bold"%>
              <%= form.file_field :image, class: "form-control" %>
            </div>
          </div>
        </div>
       
        <div class="row mb-2">
          <div class="col-lg-12">
            <div class="form-group">
              <%= form.label :description, "Assignment Description", class:"form-label fw-bold" %>
              <%= form.text_area :description, class: "form-control" %>
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <%= form.submit class: "btn btn-success mt-3" %>
          <%= link_to "Cancel", course_assignments_path, class: "btn btn-secondary mt-3" %>
        </div>
      <% end %>
    </div>