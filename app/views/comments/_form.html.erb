<%= form_with(model: [commentable.course, commentable, @comment], local: true) do |form| %>
  <div class="d-flex align-items-center form-group w-100">
    <strong class="me-2"><%= image_tag current_user.avatar, width:45, height: 45, class: "rounded-circle border bg-primary-subtle"%></strong>
    <%= form.text_area :content, placeholder: "Add a comment...", class: "border-0 border-bottom border-dark auto-expand outline-none w-100 textarea" %>
  </div>
  <div class="d-flex align-items-center justify-content-end gap-2">
    <%= form.button type: "comment", class: "btn btn-primary rounded-pill my-2"%>
  </div>
<% end %>