<h2>Edit Comment</h2>

<%= form_with(model: [@commentable.course, @commentable, @comment], local: true) do |form| %>
  <div class="form-group">
    <%= form.text_area :content, value: @comment.content, rows: 3, class: "form-control" %>
  </div>
  <div class="form-group mt-2">
    <%= form.submit "Update Comment", class: "btn btn-primary" %>
  </div>
<% end %>
