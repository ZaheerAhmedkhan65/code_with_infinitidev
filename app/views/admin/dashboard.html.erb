<div class="container mt-4">
  <div class="card border-0">
    <div class="card-title text-center my-3 bg-secondary-subtle p-3">
      <h1 class="text-center text-uppercase">Admin Dashboard</h1>
    </div>
    <div class="card-body">
      <div class="d-lg-flex align-items-center gap-3">
        <%= link_to 'View Students', users_path, class: 'btn btn-primary fw-bold' %>
        <%= link_to 'New Course', new_course_path, class: 'btn btn-primary fw-bold' %>
      </div>
      <h2 class="my-3">Courses</h2>
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Lessons</th>
            <th scope="col">Assignments</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @courses.each_with_index do |course,index| %>
            <tr>
              <td><%= index+1 %> - <%= course.title %></td>
              <td>
                <ul>
                  <% course.lessons.each_with_index do |lesson,index| %> 
                    <li class="d-lg-flex justify-content-between my-1">
                      <%= index+1 %> - 
                      <%= lesson.title %>
                      <span class="d-flex justify-content-end" >
                        <%= link_to course_lesson_path(course, lesson), class: 'btn btn-primary btn-sm mx-1 rounded-pill' do %>
                          <i class="fa-regular fa-eye"></i>
                        <% end %>
                        <%= link_to edit_course_lesson_path(course, lesson), class: 'btn btn-warning btn-sm mx-1 rounded-pill' do %>
                          <i class="fa-solid fa-pen"></i>
                        <% end %>
                        <%= button_to course_lesson_path(course, lesson), method: :delete, data: {  turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm rounded-pill' do %>
                          <i class="fa-solid fa-trash-can"></i>
                        <% end %>
                      </span>
                    </li>
                  <% end %>
                </ul>
              </td>
              <td>
                <ul>
                  <% course.assignments.each_with_index do |assignment,index| %> 
                    <li class="d-lg-flex justify-content-between my-1">
                      <%= index+1 %> - 
                      <%= assignment.title %>
                      <span class="d-flex justify-content-end">
                        <%= link_to course_assignment_path(course, assignment), class: 'btn btn-primary btn-sm mx-1 rounded-pill' do %>
                          <i class="fa-regular fa-eye"></i>
                        <% end %>
                        <%= link_to edit_course_assignment_path(course, assignment), class: 'btn btn-warning btn-sm mx-1 rounded-pill' do %>
                          <i class="fa-solid fa-pen"></i>
                        <% end %>
                        <%= button_to course_assignment_path(course, assignment), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm rounded-pill' do %>
                          <i class="fa-solid fa-trash-can"></i>
                        <% end %>
                      </span>
                    </li>
                  <% end %>
                </ul>
              </td>
              <td>
                <div class="mb-2">
                  <%= link_to 'New Assignment', new_course_assignment_path(course), class: 'btn btn-success btn-sm' %>
                </div>
                <div>
                  <%= link_to 'New Lesson', new_course_lesson_path(course), class: 'btn btn-primary btn-sm' %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div> 
</div>
