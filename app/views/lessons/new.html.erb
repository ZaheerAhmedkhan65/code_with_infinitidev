<div class="container mt-4">
    <div class="card border-0">
        <div class="card-title text-center my-3 bg-secondary-subtle p-3">
          <h1 class="text-center text-uppercase">Create a New Lesson for <%= @course.title %></h1>
        </div>
        <div class="card-body">
            <%= form_with(model: [@course, @lesson], local: true) do |form| %>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <%= form.label :title , class:'form-label fw-bold' %>
                            <%= form.text_field :title, class: "form-control" %>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <%= form.label :lesson_date, "Lesson Date" , class:'form-label fw-bold' %>
                            <%= form.datetime_local_field :lesson_date, class: "form-control" %>
                        </div>
                    </div>
                </div>
        
                 <div class="form-group">
                    <%= form.label :content , class:'form-label fw-bold' %>
                    <%= form.text_area :content, class: "form-control", rows: 5 %>
                </div>
        
                <div class="form-group my-3">
                    <%= form.submit "Create Lesson", class: "btn btn-success fw-bold" %>
                    <%= link_to 'Cancel', course_path(@course), class: "btn btn-secondary" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
