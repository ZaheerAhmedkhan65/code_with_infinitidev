<%= form_with(model: @code_snippet, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :code, "Write HTML, CSS, or JavaScript" %>
    <%= form.text_area :code, class: "border-none outline-none" , id: "code-input", style: "width: 100%; height: 680px; border: 1px solid #ccc;" %>
  </div>

  <div class="form-group">
    <%= form.label :course_id, "Select Course" %>
    <%= form.select :course_id, Course.all.collect { |course| [course.title, course.id] }, { include_blank: "Select a course" }, class: "form-control" %>
  </div>

  <%= form.submit "Create Code Snippet", class: "btn btn-primary" %>
<% end %>
