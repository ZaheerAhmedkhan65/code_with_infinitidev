<div class="card-body">
  <%= form_with(model: help_request, local: true) do |form| %>
    <% if help_request.errors.any? %>
      <div>
        <h2><%= pluralize(help_request.errors.count, "error") %> prohibited this help_request from being saved:</h2>
  
        <ul>
          <% help_request.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <% if current_user.admin? %>
      <div class="border border-rounded my-1 bg-secondary-subtle">
          <div class="mx-2 pt-2 px-2">
            <strong><%= @help_request.title %></strong>
          </div>
          <div class="mx-2 pb-2 px-2 pt-1 border-dark border-bottom mb-2"><%= @help_request.message %></div>
          <div class="form-group mb-2">
            <%= form.label :reply, "Amin's Reply" , class:'form-label fw-bold text-success mx-2 pt-2 px-2' %>
            <div class="mx-3">
              <%= form.text_area :reply, class:'form-control border border-success' %>
            </div>
          </div>
      </div>
      <% else %>
        <div class="form-group mb-2">
          <%= form.label :title, class:'form-label fw-bold'  %>
          <%= form.text_field :title, required: true, class:'form-control' %>
        </div>
  
        <div class="form-group mb-2">
          <%= form.label :message, class:'form-label fw-bold'  %>
          <%= form.text_area :message, required: true, class:'form-control' %>
        </div>
    <% end %>
  
    <div class="my-1">
      <%= form.submit class:'btn btn-primary' %>
      <%= link_to "Cancel", help_requests_path, class:'btn btn-secondary' %>
    </div>
  <% end %>
</div>