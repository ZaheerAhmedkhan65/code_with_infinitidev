


<div class="container">
  <div class="card border-0">
    <div class="card-title text-center mt-4 mb-2 bg-secondary-subtle py-2 col-lg-4  mx-auto">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
    </div>
    <div class="card-body">
      <div class="col-lg-4  mx-auto">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group mb-2">
            <%= f.label :username , class:'form-label fw-bold'%>
            <%= f.text_field :username, required: true , class:'form-control'%>
          </div>

          <div class="form-group mb-2">
            <%= f.label :avatar , class:'form-label fw-bold' %>
            <%= f.file_field :avatar , class:'form-control' %>
          </div>

          <div class="form-group mb-2">
            <%= f.label :repository_link , class:'form-label fw-bold' %>
            <%= f.text_field :repository_link, class: 'form-control' %>
          </div>

          <div class="form-group mb-2">
            <%= f.label :page_link , class:'form-label fw-bold' %>
            <%= f.text_field :page_link, class: 'form-control' %>
          </div>
          
          <div class="form-group mb-2">
            <%= f.label :email , class:'form-label fw-bold' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:'form-control' %>
          </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="form-group mb-2">
            <%= f.label :password , class:'form-label fw-bold' %> <i>(leave blank if you don't want to change it)</i>
            <%= f.password_field :password, autocomplete: "new-password" , class:'form-control' %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
          <div class="form-group mb-2">
            <%= f.label :password_confirmation , class:'form-label fw-bold' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:'form-control' %>
          </div>
          <div class="form-group mb-2">
            <%= f.label :current_password , class:'form-label fw-bold'%> <i>(we need your current password to confirm your changes)</i>
            <%= f.password_field :current_password, autocomplete: "current-password" , class:'form-control'%>
          </div>
          <div class="actions my-3">
            <%= f.submit "Update" , class:'btn btn-primary w-100 fw-bold' %>
          </div>
        <% end %>
        <div class="mt-3 mb-2 d-flex gap-3">
          <%= link_to "Back", :back , class:'btn btn-secondary' %> 
          <%= button_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete , class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>

