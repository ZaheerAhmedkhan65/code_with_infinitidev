<div class="container">
  <div class="card border-0">
    <div class="card-title text-center mt-4 mb-2 bg-secondary-subtle py-2 col-lg-4  mx-auto">
    <h2>Change your password</h2>
    </div>
    <div class="card-body">
      <div class="col-lg-4  mx-auto">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
       
          <div class="form-group mb-2">
            <%= f.label :password, "New password" , class:'form-label fw-bold'  %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password" , class:'form-control'    %>
          </div>
       
          <div class="form-group mb-2">
            <%= f.label :password_confirmation, "Confirm new password" , class:'form-label fw-bold'%>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:'form-control'    %>
          </div>
       
          <div class="actions my-3">
            <%= f.submit "Change my password" , class:'btn btn-primary w-100' %>
          </div>
        <% end %>
        <div class="mt-3 mb-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

