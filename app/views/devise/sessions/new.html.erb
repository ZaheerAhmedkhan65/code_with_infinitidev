<div class="container">
  <div class="card border-0">
    <div class="card-title text-center mt-4 mb-2 bg-secondary-subtle py-2 col-lg-4  mx-auto">
      <h2>Sign in</h2>
    </div>
    <div class="card-body">
      <div class="col-lg-4  mx-auto">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group mb-2">
            <%= f.label :email , class:'form-label fw-bold' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:'form-control'   %>
          </div>
        
          <div class="form-group mb-2">
            <%= f.label :password , class:'form-labe  l fw-bold'%>
            <%= f.password_field :password, autocomplete: "current-password" , class:'form-control'  %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="form-group mb-2">
              <%= f.check_box :remember_me , class:'form-check-input' %>
              <%= f.label :remember_me , class:'form-check-label"' %>
            </div>
          <% end %>
        
          <div class="actions my-3">
            <%= f.submit "Log in" , class:'btn btn-primary w-100 fw-bold' %>
          </div>
        <% end %> 
        <div class="mt-3 mb-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

