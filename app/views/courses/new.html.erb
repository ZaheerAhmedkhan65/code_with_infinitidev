<h1>New Course</h1>

<%= form_with(model: @course, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title, "Course Title" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter the course title" %>
  </div>

  <div class="form-group">
    <%= form.label :fee %>
    <%= form.text_field :fee, class: "form-control", placeholder: "Enter the course Fee" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Course Description" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Write a brief description of the course", rows: 5 %>
  </div>

  <div class="form-group mt-3">
    <%= form.submit "Create Course", class: "btn btn-success" %>
    <%= link_to "Cancel", courses_path, class: "btn btn-secondary" %>
  </div>
<% end %>

