<div class="card-body">
  <%= form_with(model: course, local: true) do |form| %>
    <div class="row">
      <div class="col-lg-4">
        <div class="form-group">
          <%= form.label :title, "Course Title" , class: "form-label fw-bold" %>
          <%= form.text_field :title, class: "form-control", placeholder: "Enter the course title" %>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="form-group">
          <%= form.label :fee , class: "form-label fw-bold"%>
          <%= form.text_field :fee, class: "form-control", placeholder: "Enter the course Fee" %>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="form-group">
          <%= form.label :code_language, "Example Code Language" , class: "form-label fw-bold" %>
          <%= form.select :code_language, options_for_select(['HTML', 'CSS', 'JS']), {}, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <%= form.label :description, "Course Description" , class: "form-label fw-bold" %>
          <%= form.text_area :description, class: "form-control auto-expand", placeholder: "Write a brief description of the course"%>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <%= form.label :example_code, "Example Code" , class: "form-label fw-bold" %>
          <%= form.text_area :example_code, class: "form-control auto-expand"%>
        </div>
      </div>
    </div>
    <div class="form-group mt-3">
      <%= form.submit class: "btn btn-success fw-bold" %>
      <%= link_to "Cancel", courses_path, class: "btn btn-secondary fw-bold" %>
    </div>
  <% end %>
</div>